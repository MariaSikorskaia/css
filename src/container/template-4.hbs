<header class="header row g-0">
        <div class="col-3">
          {{> logo}}
        </div>
       
        <nav class="header_nav col-9">
           <div class="header_nav_right">
            {{> nav list=header}}
           </div>
        </nav>
</header>
  {{#with main}}
    <div class="main">
      <img src="{{image}}" alt="main_image" class="main_image">
      <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{descriotion}}</p>
        <a class="button main_button" href="{{href}}">{{button}}</a>
      </div>
    </div>
  {{/with}}
  <main class="featured">
    {{#each featured}}
      {{> cardFeatured data=this}}
    {{/each}}
  </main>
  
  <div class="actions">
    <div class="actions_content">
      {{#each actions}}
        <div>
          <h3 class="actions_title">{{heading}}</h3>
          <a class="button actions_button" href="{{url}}">{{text}}</a>
        </div>
    {{/each}}
    </div>
  </div>
  
   
<footer class="row footer">
  <div class="col-3">
    {{> logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
  </div>

    {{#each footer}}
      <div class="col-3">
        <span class="footer_title">{{title}}</span>
          {{> nav list=links isVertical=true}}
      </div>
    {{/each}}
</footer>
  
